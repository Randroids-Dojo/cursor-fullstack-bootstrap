POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db

# Connection string used by backend, auth service, and migrations
DATABASE_URL=postgresql://postgres:postgres@db:5432/app_db

# Secret key used by the auth service for signing JWTs
JWT_SECRET=SUPER_SECRET_JWT_KEY_CHANGE_ME

# Ports (override only if you change docker-compose mappings)
AUTH_SERVICE_PORT=3001
BACKEND_PORT=8000

# Frontend config (not used by docker-compose but handy for local builds)
VITE_API_URL=http://localhost:8000 